        <ManosabaItemsExpansion_Anesthetic>2</ManosabaItemsExpansion_Anesthetic>
      </products>
      <displayPriority>2110</displayPriority>
    </recipeMaker>-->
    
    <!-- <costList>
      <MedicineHerbal>1</MedicineHerbal>
    </costList>-->
    
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>200</listOrder>
        <overdoseSeverityOffset>0.08~0.09</overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  
  <!-- 昏迷2小时 -->
  <HediffDef ParentName="DiseaseBase">
    <defName>Manosaba_Anesthetic</defName>
    <label>麻醉</label>
    <labelNoun>麻醉状态</labelNoun>
    <description>短效麻醉.</description>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    
    <comps>
        <li Class="HediffCompProperties_SeverityPerDay">
            <severityPerDay>-12.0</severityPerDay>
        </li>
    </comps>

    <stages>
        <li>
            <label>sedated</label>
            <painFactor>0</painFactor>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <setMax>0.01</setMax>
                </li>
            </capMods>
        </li>
    </stages>
  </HediffDef>

  <!-- 加心情 -->
  <HediffDef>
    <defName>Manosaba_Anesthetic_HappyAfterglow</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>麻醉余韵</label>
    <description>服用这个药品麻醉后增加心情</description>
    <defaultLabelColor>(1, 0, 1)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>1.0</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
    </stages>
  </HediffDef>

  <!-- 心情定义 -->
  <ThoughtDef>
    <defName>Manosaba_Anesthetic_Mood</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>Manosaba_Anesthetic_HappyAfterglow</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>我当时睡的可香了</label>
        <description>我当时睡的可香了.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <RecipeDef><!-- 采用伴生配方达不到要求，在此新建-->
